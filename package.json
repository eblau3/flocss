{
  "name": "sass",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all --serial clean copy html css js img",
    "server": "browser-sync start --server dist --watch dist/",
    "watch": "npm-run-all --parallel watch:*",
    "format": "npm-run-all --serial format:*",
    "pretty": "npm-run-all --serial pretty:*",
    "html": "cpx \"src/html/**/*\" dist/",
    "css:sass": "sass src/sass/style.scss:dist/assets/css/style.css",
    "css:postcss": "postcss dist/assets/css/style.css --output dist/assets/css/style.css",
    "css": "npm-run-all --serial css:sass css:postcss",
    "js": "webpack --config webpack.config.js",
    "img": "node imagemin.mjs",
    "watch:html": "chokidar \"src/html/**/*\" --command \"npm-run-all --serial html css\"",
    "watch:css": "chokidar \"src/sass/**/*.scss\" --command \"npm run css\"",
    "watch:js": "chokidar \"src/js/**/*.js\" --command \"npm run js\"",
    "watch:img": "chokidar \"src/images/**/*\" --command \"npm run img\"",
    "copy": "cpx \"src/copy/**/*\" dist/",
    "clean": "rimraf dist",
    "lint:sass": "stylelint \"src/sass/**/*.scss\"",
    "format:sass": "stylelint \"src/sass/**/*.scss\" --fix",
    "pretty:sass": "prettier \"src/sass/**/*.scss\" --write",
    "pretty:js": "prettier \"src/js/**/*.js\" --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "autoprefixer": "^10.4.20",
    "browser-sync": "^3.0.3",
    "chokidar": "^4.0.1",
    "chokidar-cli": "^3.0.0",
    "cpx": "^1.5.0",
    "cssnano": "^7.0.6",
    "glob": "^11.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-svgo": "^11.0.1",
    "imagemin-webp": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "sass": "^1.79.4",
    "stylelint": "^16.9.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-no-unsupported-browser-features": "^8.0.1",
    "stylelint-order": "^6.0.4",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
}
